{
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noEmit": false,
    "outDir": "out",
    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": false,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["./src/**/*"],
  "exclude": ["test"]
}
